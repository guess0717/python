	public void carin (){
		try {
			System.out.println(" 車號 : " + carid);
			System.out.println(" 進場時間 : " + enter);
			checkin = sdf.parse(enter).getTime();
		} catch (ParseException e) {
			e.printStackTrace();
		}
		
	}
	
	public void carout(){
		try {
			System.out.println(" 車號 : " + carid);
			System.out.println(" 進場時間 : " + leave);
			checkout = sdf.parse(enter).getTime();
		} catch (ParseException e) {
			e.printStackTrace();
		}
		
	}
	
	public void totaltime(){
		totaltime = (int) (checkout - checkin);
		System.out.println(" 共停了 : " + totaltime + " 分鐘 ");
	}


}
